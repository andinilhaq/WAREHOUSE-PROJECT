<ADDSTOCK>:
    MDFloatLayout:
        md_bg_color: 1,1,1,1
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_x":0.1, "center_y":0.9}
        on_release:
            root.manager.current= "welcome"
            root.manager.transition.direction = "right"
    MDTextField:
        hint_text: "Item number"
        height: "30dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    MDTextField:
        hint_text: "Add amount"
        height: "30dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
    MDLabel:
        text: "Please fill item details"
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    MDFillRoundFlatButton:
        text: "Submit"
        halign: "right"
        pos_hint: {"center_x": 0.75, "center_y": 0.1}
        on_release:
    MDRoundFlatButton:
        text: "Cancel"
        halign: "right"
        pos_hint: {"center_x": 0.9, "center_y": 0.1}
        on_release:
            root.manager.current= "welcome"
            root.manager.transition.direction = "right"